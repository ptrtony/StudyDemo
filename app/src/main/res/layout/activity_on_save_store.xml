<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#c61313"
        android:text="发射Observable数据"
        android:textAllCaps="false"
        android:layout_marginTop="100dp"/>


    <EditText
        android:id="@+id/etn_send_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text=""
        android:hint="请输入想要发送的消息"
        android:layout_marginLeft="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:text="发送消息:"
        android:textColor="#ed0707"/>
    <TextView
        android:id="@+id/tv_receive_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:textColor="#3b3a3a"
        android:textSize="16sp"
        android:text="接收到button发送的数据"
        android:layout_marginTop="10dp"/>


</LinearLayout>
